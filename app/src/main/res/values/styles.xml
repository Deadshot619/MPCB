<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="save_btn_style">
        <item name="android:textColor">@color/white</item>
        <item name="android:paddingLeft">@dimen/button_padding_left</item>
        <item name="android:paddingStart">@dimen/button_padding_left</item>
        <item name="android:paddingRight">@dimen/button_padding_right</item>
        <item name="android:paddingEnd">@dimen/button_padding_right</item>
        <item name="android:textSize">@dimen/text_large</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/btn_drawable</item>
    </style>

    <style name="save_btn_style_small">
        <item name="android:textColor">@color/white</item>
        <item name="android:paddingLeft">@dimen/button_padding_left_small</item>
        <item name="android:paddingStart">@dimen/button_padding_left_small</item>
        <item name="android:paddingRight">@dimen/button_padding_right_small</item>
        <item name="android:paddingEnd">@dimen/button_padding_right_small</item>
        <item name="android:textSize">@dimen/text_medium</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/btn_drawable</item>
    </style>

    <style name="cancel_btn_style">
        <item name="android:textColor">@color/warm_grey</item>
        <item name="android:paddingLeft">@dimen/button_padding_left</item>
        <item name="android:paddingStart">@dimen/button_padding_left</item>
        <item name="android:paddingRight">@dimen/button_padding_right</item>
        <item name="android:paddingEnd">@dimen/button_padding_right</item>
        <item name="android:textSize">@dimen/text_large</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/btn_drawable_cancel</item>
    </style>

    <style name="industry_cat_frag_space_style">
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
    </style>

    <style name="bank_guarantee_space_style">
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
    </style>

    <!--    Menu tab Styles -->
    <style name="menu_cardview_style">
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="cardCornerRadius">8dp</item>
        <item name="cardElevation">2dp</item>
    </style>

    <style name="menu_textview_style">
        <item name="android:textSize">18sp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_margin">24dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!--    Style for pagination    -->
    <style name="pagination_style">
        <item name="android:textSize">18sp</item>
        <item name="android:layout_margin">16dp</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
