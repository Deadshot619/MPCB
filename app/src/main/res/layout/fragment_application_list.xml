<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
                name="viewModel"
                type="com.gov.mpcb.menu_tabs.industry_directory.application_list.ApplicationListViewModel" />
    </data>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            tools:context=".menu_tabs.industry_directory.application_list.ApplicationListFragment">


        <!--    Toolbar -->
        <include
                android:id="@+id/toolbarLayout"
                layout="@layout/toolbar"/>

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <!--        Application List Info   -->
            <include
                    android:id="@+id/layout_id_application_list"
                    layout="@layout/item_id_application_list"
                    app:layoutVisibility="@{viewModel._progressStatus}"
                    />


            <!--Progress Bar-->
            <androidx.core.widget.ContentLoadingProgressBar
                    android:id="@+id/progress_bar"
                    style="@style/Widget.AppCompat.ProgressBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:indeterminate="true"
                    android:layout_gravity="center"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:statusProgressBar="@{viewModel._progressStatus}"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>
</layout>