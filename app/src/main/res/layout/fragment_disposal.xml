                            android:layout_height="wrap_content"
                            android:text="Industrial"
                            android:textColor="@color/grey"
                            android:textSize="@dimen/text_xlarge"
                            android:layout_margin="16dp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"/>

                    <androidx.appcompat.widget.AppCompatCheckBox
                            android:id="@+id/cbIndusCETP"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="CEPT"
                            android:textSize="@dimen/text_large"
                            android:textColor="@color/grey"
                            android:layout_marginTop="8dp"
                            android:layout_marginLeft="16dp"
                            android:layout_marginStart="16dp"
                            app:layout_constraintTop_toBottomOf="@+id/tvIndustrialTitle"
                            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
                            app:layout_constraintEnd_toStartOf="@+id/edIndusCETP" android:layout_marginRight="8dp"/>

                    <androidx.appcompat.widget.AppCompatEditText
                            android:id="@+id/edIndusCETP"
                            android:layout_width="@dimen/ed_frag_disposal_width"
