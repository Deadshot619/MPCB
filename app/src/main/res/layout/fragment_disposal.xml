                            android:layout_marginRight="16dp"
                            app:layout_constraintTop_toTopOf="@+id/cbIndusRecycle"
                            app:layout_constraintBottom_toBottomOf="@+id/cbIndusRecycle"
                            app:layout_constraintEnd_toEndOf="parent"/>


                    <androidx.appcompat.widget.AppCompatCheckBox
                            android:id="@+id/cbIndusSewageTreatment"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="Local Sewage Treatment"
                            android:textColor="@color/grey"
                            android:textSize="@dimen/text_large"
                            android:layout_marginStart="16dp"
                            android:layout_marginTop="8dp"
                            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
                            app:layout_constraintTop_toBottomOf="@+id/cbIndusRecycle" android:layout_marginEnd="8dp"
                            app:layout_constraintEnd_toStartOf="@+id/edIndusSewageTreatment"
                            android:layout_marginRight="8dp"/>

                    <androidx.appcompat.widget.AppCompatEditText
                            android:id="@+id/edIndusSewageTreatment"
                            android:layout_width="@dimen/ed_frag_disposal_width"
