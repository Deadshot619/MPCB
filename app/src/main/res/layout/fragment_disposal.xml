                    <androidx.appcompat.widget.AppCompatEditText
                            android:id="@+id/edDomesticSewageTreatment"
                            android:layout_width="@dimen/ed_frag_disposal_width"
                            android:layout_height="wrap_content"
                            android:textColor="@color/grey"
                            android:maxLines="1"
                            android:layout_marginEnd="16dp"
                            android:layout_marginRight="16dp"
                            app:layout_constraintTop_toTopOf="@+id/cbDomesticSewageTreatment"
                            app:layout_constraintBottom_toBottomOf="@+id/cbDomesticSewageTreatment"
                            app:layout_constraintEnd_toEndOf="parent"/>

                    <androidx.appcompat.widget.AppCompatCheckBox
                            android:id="@+id/cbDomesticAnyOther"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="Any Other"
                            android:textColor="@color/grey"
                            android:textSize="@dimen/text_large"
                            android:layout_marginTop="8dp"
                            android:layout_marginStart="16dp"
                            android:layout_marginLeft="16dp"
                            app:layout_constraintTop_toBottomOf="@+id/cbDomesticSewageTreatment"
                            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
                            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp"/>

                    <androidx.appcompat.widget.AppCompatEditText
                            android:id="@+id/edDomesticExtraName"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="Extra Name sdd sd"
                            android:textColor="@color/grey"
