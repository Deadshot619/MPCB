                            android:textColor="@color/grey"
                            app:layout_constraintTop_toTopOf="@+id/cbIndusCETP"
                            app:layout_constraintBottom_toBottomOf="@+id/cbIndusCETP"
                            app:layout_constraintEnd_toEndOf="parent"/>


                    <androidx.appcompat.widget.AppCompatCheckBox
                            android:id="@+id/cbIndusLandGardening"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="On land for gardening"
                            android:textColor="@color/grey"
                            android:textSize="@dimen/text_large"
                            android:layout_marginTop="8dp"
                            android:layout_marginStart="16dp"
                            android:layout_marginLeft="16dp"
                            app:layout_constraintTop_toBottomOf="@+id/cbIndusCETP"
                            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
                            app:layout_constraintEnd_toStartOf="@+id/edIndusLandGardening" android:layout_marginRight="8dp"/>

                    <androidx.appcompat.widget.AppCompatEditText
                            android:id="@+id/edIndusLandGardening"
                            android:layout_width="@dimen/ed_frag_disposal_width"
                            android:layout_height="wrap_content"
                            android:textColor="@color/grey"
                            android:maxLines="1"
                            android:layout_marginEnd="16dp"
                            android:layout_marginRight="16dp"
                            app:layout_constraintTop_toTopOf="@+id/cbIndusLandGardening"
                            app:layout_constraintBottom_toBottomOf="@+id/cbIndusLandGardening"
                            app:layout_constraintEnd_toEndOf="parent"/>

                    <androidx.appcompat.widget.AppCompatCheckBox
