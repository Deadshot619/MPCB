                            android:layout_width="@dimen/ed_frag_disposal_width"
                            android:layout_height="wrap_content"
                            android:text="400"
                            android:maxLines="1"
                            android:textColor="@color/grey"
                            android:layout_marginEnd="16dp"
                            android:layout_marginRight="16dp"
                            app:layout_constraintTop_toTopOf="@+id/tvIndustrialTotal"
                            app:layout_constraintBottom_toBottomOf="@+id/tvIndustrialTotal"
                            app:layout_constraintEnd_toEndOf="parent"/>

                    <View
                            android:id="@+id/view_separator_industrial"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/view_line_two"
                            android:background="@color/light_white_100"
                            app:layout_constraintEnd_toEndOf="parent"
                            android:layout_marginTop="8dp"
