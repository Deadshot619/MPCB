                            android:layout_marginTop="16dp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="@+id/cbIndusAnyOther"
                            app:layout_constraintHorizontal_bias="0.0"
                            app:layout_constraintTop_toBottomOf="@+id/edIndusExtraName"/>


                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvIndustrialTotal"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Total"
                        android:textColor="@color/grey"
                        android:textSize="@dimen/text_xlarge"
                        android:layout_marginTop="16dp"
                        app:layout_constraintTop_toBottomOf="@+id/viewIndustrialSeparator"
                        app:layout_constraintStart_toStartOf="@+id/edIndusExtraName"
