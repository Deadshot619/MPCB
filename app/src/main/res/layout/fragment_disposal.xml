                            android:textColor="@color/grey"
                            app:layout_constraintTop_toTopOf="@+id/cbDomesticCETP"
                            app:layout_constraintBottom_toBottomOf="@+id/cbDomesticCETP"
                            app:layout_constraintEnd_toEndOf="parent"/>

                    <androidx.appcompat.widget.AppCompatCheckBox
                            android:id="@+id/cbDomesticLandGardening"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="On land for gardening"
                            android:textColor="@color/grey"
                            android:textSize="@dimen/text_large"
                            android:layout_marginTop="8dp"
                            android:layout_marginStart="16dp"
                            android:layout_marginLeft="16dp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/cbDomesticCETP" android:layout_marginEnd="8dp"
                            app:layout_constraintEnd_toStartOf="@+id/edDomesticLandGardening"
                            android:layout_marginRight="8dp"/>

                    <androidx.appcompat.widget.AppCompatEditText
                            android:id="@+id/edDomesticLandGardening"
                            android:layout_width="@dimen/ed_frag_disposal_width"
                            android:layout_height="wrap_content"
                            android:textColor="@color/grey"
                            android:maxLines="1"
                            android:layout_marginEnd="16dp"
                            android:layout_marginRight="16dp"
                            app:layout_constraintTop_toTopOf="@+id/cbDomesticLandGardening"
                            app:layout_constraintBottom_toBottomOf="@+id/cbDomesticLandGardening"
                            app:layout_constraintEnd_toEndOf="parent"/>

                    <androidx.appcompat.widget.AppCompatCheckBox
                            android:id="@+id/cbDomesticRecycle"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="Recycle"
                            android:textColor="@color/grey"
                            android:textSize="@dimen/text_large"
                            android:layout_marginTop="8dp"
                            android:layout_marginStart="16dp"
                            android:layout_marginLeft="16dp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/cbDomesticLandGardening"
                            android:layout_marginEnd="8dp" app:layout_constraintEnd_toStartOf="@+id/edDomesticRecycle"
                            android:layout_marginRight="8dp"/>

                    <androidx.appcompat.widget.AppCompatEditText
                            android:id="@+id/edDomesticRecycle"
                            android:layout_width="@dimen/ed_frag_disposal_width"
                            android:layout_height="wrap_content"
                            android:textColor="@color/grey"
                            android:maxLines="1"
                            android:layout_marginEnd="16dp"
                            android:layout_marginRight="16dp"
                            app:layout_constraintTop_toTopOf="@+id/cbDomesticRecycle"
                            app:layout_constraintBottom_toBottomOf="@+id/cbDomesticRecycle"
                            app:layout_constraintEnd_toEndOf="parent"/>

                    <androidx.appcompat.widget.AppCompatCheckBox
                            android:id="@+id/cbDomesticSewageTreatment"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="Local Sewage Treatment"
                            android:textColor="@color/grey"
                            android:textSize="@dimen/text_large"
                            android:layout_marginTop="8dp"
                            android:layout_marginStart="16dp"
                            android:layout_marginLeft="16dp"
                            app:layout_constraintTop_toBottomOf="@+id/cbDomesticRecycle"
