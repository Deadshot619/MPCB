<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
            android:id="@+id/cardviewLayout"
            app:cardCornerRadius="10dp"
            app:cardElevation="4dp"
            app:cardUseCompatPadding="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintTop_toTopOf="parent">

        <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/txtLabel"
                        android:layout_marginTop="16dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:text="Last JVS Details"
                        android:layout_marginLeft="16dp"
                        android:textSize="18sp"
                        android:textColor="@color/grey"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                <LinearLayout
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:id="@+id/linLayDataCollectionOne"
                        android:layout_width="match_parent"
                        app:layout_constraintTop_toBottomOf="@id/txtLabel"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                    <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="6"
                            android:text="Data Collection"
                            android:textSize="18sp"
                            android:textColor="@color/black"/>

                    <androidx.appcompat.widget.AppCompatEditText
                            android:layout_weight="2"
                            android:layout_marginRight="20dp"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"/>

                    <androidx.appcompat.widget.AppCompatEditText
                            android:layout_weight="2"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"/>
                </LinearLayout>

                <LinearLayout
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:id="@+id/linLayPymntDetailsOne"
                        android:layout_width="match_parent"
                        app:layout_constraintTop_toBottomOf="@id/linLayDataCollectionOne"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                    <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="6"
                            android:text="Payment details"
                            android:textSize="18sp"
                            android:textColor="@color/black"/>

                    <androidx.appcompat.widget.AppCompatEditText
                            android:layout_weight="2"
                            android:layout_marginRight="20dp"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"/>

                    <androidx.appcompat.widget.AppCompatEditText
                            android:layout_weight="2"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"/>
                </LinearLayout>

                <LinearLayout
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:id="@+id/linLayDataCollectionTwo"
                        android:layout_width="match_parent"
                        app:layout_constraintTop_toBottomOf="@id/linLayPymntDetailsOne"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                    <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="6"
                            android:text="Data Collection"
                            android:textSize="18sp"
                            android:textColor="@color/black"/>

                    <androidx.appcompat.widget.AppCompatEditText
                            android:layout_weight="2"
                            android:layout_marginRight="20dp"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="20dp"/>

                    <androidx.appcompat.widget.AppCompatEditText
                            android:layout_weight="2"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"/>
                </LinearLayout>

                <LinearLayout
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:id="@+id/linLayPymntDetailsTwo"
                        android:layout_width="match_parent"
                        app:layout_constraintTop_toBottomOf="@id/linLayDataCollectionTwo"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                    <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="6"
                            android:text="Payment details"
                            android:textSize="18sp"
                            android:textColor="@color/black"/>

                    <androidx.appcompat.widget.AppCompatEditText
                            android:layout_weight="2"
                            android:layout_marginRight="20dp"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="20dp"/>

                    <androidx.appcompat.widget.AppCompatEditText
                            android:layout_weight="2"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"/>
                </LinearLayout>

                <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/txtJVSSample"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:layout_marginTop="24dp"
                        app:layout_constraintTop_toBottomOf="@id/linLayPymntDetailsTwo"
                        app:layout_constraintStart_toStartOf="parent"
                        android:text="JVS Sample Collected for Water"
                        android:textSize="18sp"
                        android:textColor="@color/grey"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                <RadioGroup
                        android:id="@+id/rgJVSSample"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/txtJVSSample"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                    <androidx.appcompat.widget.AppCompatRadioButton
                            android:layout_width="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="Yes"
                            android:textSize="18sp"
                            android:layout_height="wrap_content"/>

                    <androidx.appcompat.widget.AppCompatRadioButton
                            android:layout_marginTop="4dp"
                            android:layout_width="wrap_content"
                            android:text="No"
                            android:layout_marginLeft="32dp"
                            android:layout_marginStart="32dp"
                            android:textSize="18sp"
                            android:layout_height="wrap_content"/>
                </RadioGroup>

                <View
                        android:id="@+id/viewDividerOne"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/view_line_two"
                        android:background="@color/light_white_100"
                        android:layout_marginTop="8dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/rgJVSSample"/>

                <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/sourceLayout"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@id/viewDividerOne"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent">

                    <androidx.appcompat.widget.AppCompatEditText
                            android:hint="Source"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                </com.google.android.material.textfield.TextInputLayout>

                <LinearLayout
                        android:layout_marginTop="16dp"
                        android:id="@+id/linLayHeader"
                        android:layout_marginLeft="16dp"
                        android:gravity="center_vertical"
                        android:layout_marginRight="16dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/sourceLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                    <androidx.appcompat.widget.AppCompatTextView
                            android:text="Parameter"
                            android:gravity="center"
                            app:layout_constraintStart_toStartOf="parent"
                            android:layout_width="0dp"
                            android:layout_weight="3.5"
                            android:layout_height="45dp"/>

                    <androidx.appcompat.widget.AppCompatTextView
                            android:text="Prescribed Value"
                            android:gravity="center"
                            app:layout_constraintStart_toStartOf="parent"
                            android:layout_width="0dp"
                            android:layout_weight="3.5"
                            android:layout_height="45dp"/>

                    <androidx.appcompat.widget.AppCompatTextView
                            android:gravity="center"
                            android:layout_height="wrap_content"
                            android:layout_width="0dp"
                            android:layout_weight="1.5"/>

                    <androidx.appcompat.widget.AppCompatTextView
                            android:gravity="center"
                            android:layout_height="wrap_content"
                            android:layout_width="0dp"
                            android:layout_weight="1.5"/>
                </LinearLayout>

                <LinearLayout
                        android:id="@+id/linLayParameterOne"
                        android:layout_marginLeft="16dp"
                        android:gravity="center_vertical"
                        android:layout_marginRight="16dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/linLayHeader"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                    <androidx.appcompat.widget.AppCompatEditText
                            android:gravity="center"
                            app:layout_constraintStart_toStartOf="parent"
                            android:background="@drawable/bg_rectangle"
                            android:layout_width="0dp"
                            android:layout_weight="3.5"
                            android:layout_height="45dp"/>

                    <androidx.appcompat.widget.AppCompatEditText
                            android:gravity="center"
                            app:layout_constraintStart_toStartOf="parent"
                            android:background="@drawable/bg_rectangle"
                            android:layout_width="0dp"
                            android:layout_weight="3.5"
                            android:layout_height="45dp"/>

                    <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="0dp"
                            android:layout_weight="1.5"
                            android:src="@drawable/ic_face"
                            android:layout_height="wrap_content"/>

                    <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="0dp"
                            android:layout_weight="1.5"
                            android:src="@drawable/ic_face"
                            android:layout_height="wrap_content"/>

                </LinearLayout>

                <LinearLayout
                        android:id="@+id/linLayParameterTwo"
                        android:layout_marginLeft="16dp"
                        android:gravity="center_vertical"
                        android:layout_marginTop="16dp"
                        android:layout_marginRight="16dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/linLayParameterOne"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                    <androidx.appcompat.widget.AppCompatEditText
                            android:gravity="center"
                            app:layout_constraintStart_toStartOf="parent"
                            android:background="@drawable/bg_rectangle"
                            android:layout_width="0dp"
                            android:layout_weight="3.5"
                            android:layout_height="45dp"/>

                    <androidx.appcompat.widget.AppCompatEditText
                            android:gravity="center"
                            app:layout_constraintStart_toStartOf="parent"
                            android:background="@drawable/bg_rectangle"
                            android:layout_width="0dp"
                            android:layout_weight="3.5"
                            android:layout_height="45dp"/>

                    <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="0dp"
                            android:layout_weight="1.5"
                            android:src="@drawable/ic_face"
                            android:layout_height="wrap_content"/>

                    <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="0dp"
                            android:layout_weight="1.5"
                            android:src="@drawable/ic_face"
                            android:layout_height="wrap_content"/>
                </LinearLayout>

                <View
                        android:id="@+id/viewDividerTwo"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/view_line_two"
                        android:background="@color/light_white_100"
                        android:layout_marginTop="8dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/linLayParameterTwo"/>

                <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/sourceTwoLayout"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@id/viewDividerTwo"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent">

                    <androidx.appcompat.widget.AppCompatEditText
                            android:hint="Source"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                </com.google.android.material.textfield.TextInputLayout>

                <LinearLayout
                        android:layout_marginTop="16dp"
                        android:layout_marginLeft="16dp"
                        android:gravity="center_vertical"
                        android:layout_marginRight="16dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/sourceLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                    <androidx.appcompat.widget.AppCompatTextView
                            android:text="Parameter"
                            android:gravity="center"
                            app:layout_constraintStart_toStartOf="parent"
                            android:layout_width="0dp"
                            android:layout_weight="3.5"
                            android:layout_height="45dp"/>

                    <androidx.appcompat.widget.AppCompatTextView
                            android:text="Prescribed Value"
                            android:gravity="center"
                            app:layout_constraintStart_toStartOf="parent"
                            android:layout_width="0dp"
                            android:layout_weight="3.5"
                            android:layout_height="45dp"/>

                    <androidx.appcompat.widget.AppCompatTextView
                            android:gravity="center"
                            android:layout_height="wrap_content"
                            android:layout_width="0dp"
                            android:layout_weight="1.5"/>

                    <androidx.appcompat.widget.AppCompatTextView
                            android:gravity="center"
                            android:layout_height="wrap_content"
                            android:layout_width="0dp"
                            android:layout_weight="1.5"/>
                </LinearLayout>

                <LinearLayout
                        android:id="@+id/linLayParameterThree"
                        android:layout_marginLeft="16dp"
                        android:gravity="center_vertical"
                        android:layout_marginTop="16dp"
                        android:layout_marginRight="16dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/sourceTwoLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                    <androidx.appcompat.widget.AppCompatEditText
                            android:gravity="center"
                            app:layout_constraintStart_toStartOf="parent"
                            android:background="@drawable/bg_rectangle"
                            android:layout_width="0dp"
                            android:layout_weight="3.5"
                            android:layout_height="45dp"/>

                    <androidx.appcompat.widget.AppCompatEditText
                            android:gravity="center"
                            app:layout_constraintStart_toStartOf="parent"
                            android:background="@drawable/bg_rectangle"
                            android:layout_width="0dp"
                            android:layout_weight="3.5"
                            android:layout_height="45dp"/>

                    <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="0dp"
                            android:layout_weight="1.5"
                            android:src="@drawable/ic_face"
                            android:layout_height="wrap_content"/>

                    <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="0dp"
                            android:layout_weight="1.5"
                            android:src="@drawable/ic_face"
                            android:layout_height="wrap_content"/>
                </LinearLayout>

                <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/imgAddMore"
                        android:layout_width="wrap_content"
                        android:src="@drawable/ic_face"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="16dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/linLayParameterThree"
                        android:layout_height="wrap_content"/>

                <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/txtAddMore"
                        app:layout_constraintTop_toBottomOf="@id/linLayParameterThree"
                        android:layout_width="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="16dp"
                        android:text="Add More Source"
                        app:layout_constraintStart_toEndOf="@id/imgAddMore"
                        android:layout_height="wrap_content"/>

                <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btnLogin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Save &amp; Continue"
                        android:layout_marginBottom="24dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        style="@style/save_btn_style"
                        android:background="@drawable/btn_drawable"
                        app:layout_constraintTop_toBottomOf="@+id/txtAddMore"
                        android:layout_marginTop="32dp"
                        app:layout_constraintStart_toStartOf="parent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.core.widget.NestedScrollView>
    </androidx.cardview.widget.CardView>
</layout>